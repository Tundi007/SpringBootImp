<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/prototype?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="connection.pool_size">100</property>
        <property name="transaction.auto_close_session">true</property>
        <property name="current_session_context_class"> thread</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.prototype.springP1.entity.bank.Melli"/>
        <mapping class="com.prototype.springP1.entity.bank.Sepah"/>
        <mapping class="com.prototype.springP1.entity.bank.Bank"/>
        <mapping class="com.prototype.springP1.entity.deposit.MelliDeposit"/>
        <mapping class="com.prototype.springP1.entity.deposit.SepahDeposit"/>
        <mapping class="com.prototype.springP1.entity.deposit.Deposit"/>
        <mapping class="com.prototype.springP1.entity.transaction.MelliTransaction"/>
        <mapping class="com.prototype.springP1.entity.transaction.SepahTransaction"/>
        <mapping class="com.prototype.springP1.entity.transaction.Transaction"/>
    </session-factory>
</hibernate-configuration>